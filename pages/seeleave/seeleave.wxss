/* pages/detail/detail.wxss */

page {
  font-size: 32rpx;
}
.bgPic{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.info > view {

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  height: 80rpx;
}

.info > view:last-child {
  border: none;
}

.fl {
  flex: 1;
}

.rl {
  flex: 1;
  text-align: right;
  color: red;
}
.bl {
  flex: 1;
  text-align: right;
  color: green;
}

.info image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
}

.info .arrow {
  width: 30rpx;
  height: 32rpx;
  float: right;
  margin: 26rpx 0 0 15rpx;
}
.avatar{
  width: 1%;
  height: 1%;
}
.logoutBtn{
  margin-top: 10%;
}